/* pages/result/result.wxss */

.neirong {
  padding-bottom: 60px;
}
.swiper {
  width: 100%;
}
.one {
  width: 100%;
}

.one .one_name {
  font-size: 28rpx;
  color: #F75604;
  line-height: 40px;
  padding: 0 20px;
}

.one .two {
  border-top: 1px solid #f0f0f0;
  margin-bottom: 20px;
}

.one .two .list {
  border-bottom: 1px solid #f0f0f0;
  padding: 10px 20px;
}

.one .two .list .two_name {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.one .two .list .two_name .two_n {
  font-size: 32rpx;
  color: #111;
}

.one .two .list .two_name .two_n text {
  color: #b6b6b6;
  font-size: 28rpx;
  margin-left: 3px;
}

.one .two .list .two_name .yx {
  font-size: 28rpx;
  color: #808080;
  width: 108px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.one .two .list .two_name .yx text {
  font-size: 28rpx;
  color: #808080;
  width: 85px;
  margin-right: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: right;
}

.one .two .list .two_name .yx image {
  width: 15px;
}

.one .two .list .two_name .yx.active text {
  color: #F75604;
}

.one .two .list .two_name .yx.active image {
  transform: rotate(180deg);
}

.one .two .list .option {
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}

.one .two .list .option view {
  width: calc(31% - 16px);
  font-size: 28rpx;
  color: #5c5c5c;
  border: 1px solid #f0f0f0;
  text-align: center;
  height: 25px;
  line-height: 15px;
  margin-top: 10px;
  margin-right: calc(3.5% - 3px);
  padding: 10px 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.one .two .list .option view text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.one .two .list .option view:nth-child(3n) {
  margin-right: 0;
}

.one .two .list .option view.active {
  color: #F75604;
  border: 1px solid #F75604;
}

.two .wenhao {
  width: 26rpx;
  margin-left: 10rpx;
}
.zy-slider {
  width: 100%;
}

.twoSlider {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.date {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 10px;
}

.date text {
  font-size: 36rpx;
  color: #f8712c;
  text-align: center;
  font-weight: 600;
}

.date text:nth-child(2) {
  font-size: 26rpx;
  color: #7f7f7f;
  text-align: center;
  font-weight: 500;
  margitn-top: 5px;
}

/* 底部菜单 */

.nav {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  display: flex;
}

.nav .left {
  width: 50%;
  display: flex;
  border-top: 1px solid #f0f0f0;
}

.nav .left button {
  width: 100%;
  color: #2b2b2b;
  font-size: 28rpx;
  line-height: 60px;
  text-align: center;
  border-radius: 0;
  background: none;
}

.nav .left button::after {
  border: none;
  border-radius: 0;
}

.nav .right {
  width: 50%;
}

.nav .right view {
  width: 100%;
  background: #F75604;
  font-size: 28rpx;
  color: #fff;
  line-height: 60px;
  text-align: center;
}

.nav .right view.Gray {
  background: #919191;
}

.range-slider-block {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  background-color: white;
  box-shadow: 0px 0px 5px #888;
}

.range-text {
  font-size: 18px;
}

.subnav {
  width: 100%;
  display: flex;
  background: #fff;
}

.subnav view {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  padding: 15px 0;
  display: block;
  border-bottom: 1px solid #c4c4c4;
}

.subnav view.active {
  background-color: #F75604;
  color: #fff;
  border-bottom: 2px solid #F75604;
}

/* 跑马灯样式 */
.marquee {
  background-color: #F6F6F6;
}
.marquee .marquee-item {
  height: 86rpx;
  font-size: 28rpx;
  padding: 24rpx;
}
.marquee-left {
  flex: 1;
}
.marquee-right {
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
  color: #F75604; 
}
.marquee-right-item {
  height: 50rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #E1E1E1;
}
.marquee .content text{
  color: #666666;
  line-height: 43rpx;
}