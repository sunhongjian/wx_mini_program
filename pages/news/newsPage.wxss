/* pages/news/newsPage.wxss */
.news-box {
  padding: 24rpx;
}
.newsCard {
  padding: 32rpx;
  border-style: solid;
  box-shadow: 0px 2px 4px 2px rgb(247, 247, 247);
  border-width: 0rpx;
  margin-bottom: 24rpx;
}
.newsCard .content {
  color: #333333;
  font-size: 30rpx;
}
.newsCard .news-bot {
  margin-top: 10rpx;
  color: #999999;
  font-size: 28rpx;
}
.newsCard .news-bot text {
  flex: 1;
}
