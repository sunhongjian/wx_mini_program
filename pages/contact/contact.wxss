/* pages/contact/contact.wxss */
.main-text {
  color: #F5651B;
  font-size: 28rpx;
  margin-bottom: 200rpx;
  padding: 0 20rpx;
}
.main-text text {
  display: block;
}
.main-text .item {
  border-bottom: 1rpx solid #F0F0F0;
  padding: 40rpx 0;
  position: relative;
  padding-left: 100rpx;
}
.main-text .item image {
  width: 48rpx;
  position: absolute;
  left: 36rpx;
  top: 35rpx;
}

.nav {
  background: #fff;
  position: fixed;
  bottom: 0;
  box-shadow: 0px 0px 18px 0px rgba(134, 134, 134, 0.75);
  width: 100%;
  display: flex;
  align-items: center;
  height: 130rpx;
  z-index: 10;
}
.nav .icon-style {
  width: 34rpx;
}

.nav button {
  font-size: 30rpx;
  color: #f7651b;
  border: none;
  background: inherit;
}
.nav button:after {
  content: none
}

.nav .nav-item {
  width: 100%;
  height: 130rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}